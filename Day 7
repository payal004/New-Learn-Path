Check for Balance Parentheses 
() [ {} () ]      valid 
[ ()  /           not valid 
#include...
using namespace std;
bool isvalid(string s)
{
 stack<char> st;
 for(auto it:s)
 {
   if(it=='(' || it=='{' || it=='[') st.push(it);
   else{
     if(st.size()==0) return false;
     char ch = st.top();
     st.pop();
     if(( it==')' and  ch=='(')  or (it==']' and ch == '[') or (it == '}' and ch == '{')) continue;
     else return false;
    }
 }
int main()
{
 string s = "()[{}()]";
 if(isvalid(s)) cout <<"True"<<endl;
 else cout<<"False"<<endl;
}
}
