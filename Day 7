Day 7 
q1 implement Stack using array 
LIFO 

#include<bits/stdc++.h>
usng namespace std;
class stack {
int size;
int *arr;
int top;
Stack(){
top = -1;
size = 1000;
arr=new int[size];
}
void push(int x)
{
 top++;
 arr[top]=x;
}
int pop(){
int x = arr[top];
top--;
return x;
}
int top(){ return arr[top]; )
int size(){ return top+1;}
int main()
{
Stack s;
s.push(1);
s.push(2);
s.push(3);
s.top();
s.size();
s.pop();
return 0;
}

